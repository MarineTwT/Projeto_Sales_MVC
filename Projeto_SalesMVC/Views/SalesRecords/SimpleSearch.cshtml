@model IEnumerable<Projeto_SalesMVC.Models.SalesRecord>

@{
    ViewData["Title"] = "Simple Search";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <form asp-action="SimpleSearch" asp-controller="Sales" class="d-flex">
        <div class="form-group">
            <label for="minDate" class="form-label">Min Date</label>
            <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
        </div>
        <div class="form-group">
            <label for="maxDate" class="form-label">Max Date</label>
            <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
        </div>
        <button type="submit" class="btn btn-light">Filter</button>
    </form>
</nav>

<div class="card border-primary mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="card-title">Total sales = @Model.Sum(obj => obj.Amount).ToString("F2")</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th>
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Seller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Seller.Department.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Status)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Seller.Department.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
